<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 그림자 레이어 -->
<item>
    <shape android:shape="rectangle">
        <!-- 10% 투명도를 가진 검정색 그림자 -->
        <solid android:color="#1A000000"/>
        <!-- 그림자 효과를 주기 위한 패딩, Y축으로 4dp만큼 -->
        <padding
            android:bottom="4dp"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp" />
        <!-- 그림자 모서리 반경 -->
        <corners android:radius="5dp"/>
    </shape>
</item>
<!-- 버튼 배경 레이어 -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/BR_400"/>
        <corners android:radius="5dp"/>
    </shape>
</item>
</layer-list>
