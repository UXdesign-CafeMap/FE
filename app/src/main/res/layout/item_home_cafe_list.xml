<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_br100">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_hl_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginVertical="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                android:id="@+id/iv_hl_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_detail_menu"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_hl_cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@id/cv_hl_img"
            app:layout_constraintLeft_toRightOf="@id/cv_hl_img"
            android:text="스타벅스 건대스타시티점"
            android:fontFamily="@font/gothic_bold"
            android:textSize="20dp"
            android:textColor="@color/BK"/>

        <TextView
            android:id="@+id/tv_hl_cafe_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:text="180m"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gothic_light"
            android:textSize="12dp"
            android:textColor="@color/SUB_400"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_hl_cafe_dense"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toRightOf="@id/cv_hl_img"
            app:layout_constraintTop_toBottomOf="@id/tv_hl_cafe_name"
            app:cardCornerRadius="20dp" />

        <TextView
            android:id="@+id/tv_hl_cafe_dense_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toRightOf="@id/cv_hl_cafe_dense"
            app:layout_constraintTop_toBottomOf="@id/tv_hl_cafe_name"
            android:text="보통"
            android:fontFamily="@font/gothic_regular"
            android:textSize="16dp"
            android:textColor="@color/SUB_600"/>

        <TextView
            android:id="@+id/tv_hl_cafe_seat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toRightOf="@id/tv_hl_cafe_dense_label"
            app:layout_constraintTop_toBottomOf="@id/tv_hl_cafe_name"
            android:text="| 좌석 현황 : "
            android:fontFamily="@font/gothic_regular"
            android:textSize="16dp"
            android:textColor="@color/SUB_600"/>

        <TextView
            android:id="@+id/tv_hl_cafe_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toRightOf="@id/tv_hl_cafe_seat_label"
            app:layout_constraintTop_toBottomOf="@id/tv_hl_cafe_name"
            android:text="2 / 5"
            android:fontFamily="@font/gothic_regular"
            android:textSize="16dp"
            android:textColor="@color/SUB_600"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>